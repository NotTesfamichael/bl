# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/notes_blog"
POSTGRES_DB="notes_blog"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"

# JWT Configuration
JWT_SECRET="CHANGE_ME_TO_A_SECURE_RANDOM_STRING"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="production"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Redis Configuration
REDIS_URL="redis://redis:6379"

# Google OAuth (Replace with your own credentials)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (Replace with your own credentials)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# OIDC Configuration
OIDC_CLIENT_ID="notes-blog"
OIDC_CLIENT_SECRET="your-oidc-client-secret"
OIDC_REDIRECT_URI="http://localhost:3001/api/auth/oidc/callback"

# Seed Configuration (For initial admin user creation)
# Uncomment and set these to create an admin user during setup
# SEED_ADMIN_EMAIL="admin@notesblog.local"
# SEED_ADMIN_PASSWORD="admin123"